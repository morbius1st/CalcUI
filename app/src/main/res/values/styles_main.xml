<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
	</style>

	<!-- main -->
	<style name = "viewStyle_A" parent="Base.Widget.AppCompat.Button.Borderless">
		<item name = "android:textAllCaps">false</item>
		<item name = "android:minWidth">0dp</item>
		<item name = "android:minHeight">0dp</item>
		<item name = "android:paddingTop">0dp</item>
		<item name = "android:paddingBottom">0dp</item>
		<item name = "android:paddingRight">0dp</item>
		<item name = "android:paddingLeft">0dp</item>
		<item name = "android:background">@color/holo_blue_xxdark</item>
		<item name = "android:textColor">@android:color/white</item>
		<item name = "android:textSize">@dimen/text_size_button_large</item>

	</style>

	<!-- main -->
	<style name = "viewStyle_E" parent="Base.Widget.AppCompat.Button.Borderless">
		<item name = "android:paddingLeft">5dp</item>
		<item name = "android:paddingRight">5dp</item>
		<item name = "android:minHeight">0dp</item>
		<item name = "android:scaleType">matrix</item>
		<item name = "android:contentDescription">Mark Button</item>
		<item name = "android:adjustViewBounds">false</item>

		<item name = "android:layout_span">3</item>
		<item name = "android:textSize">@dimen/text_size_button_xxlarge</item>
		<item name = "android:gravity">clip_vertical|center</item>
		<item name = "android:paddingBottom">0dp</item>

		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">match_parent</item>
		<item name = "android:layout_margin">2dp</item>
		<item name = "android:textAllCaps">false</item>
		<item name = "android:minWidth">0dp</item>
		<item name = "android:paddingTop">0dp</item>
		<item name = "android:background">@color/holo_blue_xxdark</item>
		<item name = "android:textColor">@android:color/white</item>
	</style>

</resources>